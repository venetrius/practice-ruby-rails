<h1>This is a page to create a particle</h1>

<%# Show errors if any%>
<% if @particle.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@particle.errors.count, "error") %> prohibited
      this particle from being saved:
    </h2>
    <ul>
      <% @particle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%# Render form %>
<%= form_with scope: :particle, url: particles_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :spin %><br>
    <%= form.text_field :spin %>
  </p>

    <p>
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
